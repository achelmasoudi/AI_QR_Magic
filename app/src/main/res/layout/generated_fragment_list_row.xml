<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/ApplicationBackground"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/generated_QrCode_cardViewId"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        style="@style/CardViewBackground"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">


            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:selectableItemBackground">

                <ImageView
                    android:id="@+id/generated_QrCode_ImageId"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/ic_launcher_background" />
            </androidx.cardview.widget.CardView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="10dp"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/generated_QrCode_ImageTypeId"
                        android:layout_width="27dp"
                        android:layout_height="27dp"
                        android:layout_gravity="center"
                        android:src="@drawable/wifi_icon" />

                    <TextView
                        android:id="@+id/generated_QrCode_TypeId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:text="WIFI"
                        style="@style/TextCardViewColor"
                        android:textSize="15dp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/generated_QrCode_LinkId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:singleLine="true"
                    android:text="Link"
                    android:textColor="#878787"
                    android:textSize="10dp" />


            </LinearLayout>


        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="120dp"
            android:layout_height="20dp"
            android:layout_gravity="bottom|right"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            style="@style/BackgroundOfDate_TimeTabLayout"
            app:cardCornerRadius="5dp">

            <TextView
                android:id="@+id/generated_QrCode_dateTimeId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="00:00   02/02/2023"
                android:textColor="#878787"
                android:textSize="11dp" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/threeDotsOfMenu"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_gravity="top|right"
            android:layout_marginRight="5dp"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginTop="4dp"
            android:foreground="?android:selectableItemBackground"
            app:cardBackgroundColor="#00000000"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp">

            <TextView
                android:layout_width="23dp"
                android:layout_height="wrap_content"
                android:paddingLeft="12dp"
                android:textStyle="bold"
                android:text="&#8942;"
                android:contentDescription="More"
                android:textAppearance="?android:textAppearanceLarge"
                android:textColor="#878787" />
        </androidx.cardview.widget.CardView>

    </androidx.cardview.widget.CardView>

</RelativeLayout>