<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Background_FragmentGenerate"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GenerateX">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarId_GenerateX"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#004FE8">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/arrowback_from_generateXId"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="1dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:selectableItemBackground"
                app:cardBackgroundColor="#00004FE8"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:contentDescription="Back"
                    android:src="@drawable/arrow_back" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:text="@string/GenerateX_toolbarTitle"
                android:textColor="#F0F3F8"
                android:textSize="18dp"
                android:textStyle="bold" />
        </LinearLayout>

    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbarId_GenerateX">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="28dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/generateX_TwitterIcon"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:src="@drawable/xtwitter_icon" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/generateFragment_XGenerate_linkId"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="60dp"
                    android:layout_marginRight="15dp"
                    android:textColorHint="#6D6D6D"
                    app:boxStrokeColor="@color/text_input_layout_stroke_color_selector"
                    app:boxStrokeErrorColor="#FF0000"
                    app:endIconMode="clear_text"
                    app:errorTextColor="#FF0000">

                    <com.google.android.material.textfield.TextInputEditText
                        style="@style/TextCardViewColor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/Username_hint"
                        android:inputType="text" />
                </com.google.android.material.textfield.TextInputLayout>

                <androidx.cardview.widget.CardView
                    android:contentDescription="@string/Generate_btn"
                    android:id="@+id/generate_X_Btn"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="95dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="50dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"
                    app:cardCornerRadius="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:background="@drawable/background_of_generate_btn"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="26dp"
                            android:layout_height="26dp"
                            android:src="@drawable/generate_button" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginLeft="12dp"
                            android:fontFamily="@font/autoradiographic"
                            android:gravity="center"
                            android:text="@string/Generate_btn"
                            android:textAllCaps="false"
                            android:textColor="#F1F2F6"
                            android:textSize="18dp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </RelativeLayout>
    </ScrollView>

    <View
        android:id="@+id/shadowFromViewId_GenerateX"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbarId_GenerateX"
        android:background="#A6000000" />

    <View
        android:id="@+id/shadowFromViewId_GenerateX2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbarId_GenerateX"
        android:background="#A6000000"
        android:visibility="gone" />

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <FrameLayout
            android:id="@+id/bottomSheetIdFrameLayoutGenerateX"
            android:layout_width="match_parent"
            android:layout_height="470dp"
            android:background="@drawable/bottom_sheet_background"
            app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/bar_bottom_sheep_icon" />

            <androidx.cardview.widget.CardView
                android:contentDescription="QR Code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="45dp"
                android:layout_marginRight="30dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:selectableItemBackground"
                app:cardCornerRadius="10dp">

                <ImageView
                    android:id="@+id/imageOfQrCode_XGenerateId"
                    android:layout_width="280dp"
                    android:layout_height="280dp"
                    android:src="@drawable/ic_launcher_background" />
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="50dp"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="32dp"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="25dp"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/saveButtonIdGenerateX"
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/save_icon"
                            app:civ_border_color="#878787"
                            app:civ_border_width="2dp" />

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/savedSuccessButtonIdGenerateX"
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/success_copy_icon"
                            android:visibility="gone"
                            app:civ_border_color="#878787"
                            app:civ_border_width="2dp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center">

                        <TextView
                            android:id="@+id/saveTxtViewIdGenerateX"
                            style="@style/TextCardViewColor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_gravity="center"
                            android:layout_marginTop="5dp"
                            android:gravity="center"
                            android:text="@string/Save_btn"
                            android:textSize="12dp" />

                        <TextView
                            android:id="@+id/savedSuccessTxtViewIdGenerateX"
                            style="@style/TextCardViewColor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_gravity="center"
                            android:layout_marginTop="5dp"
                            android:gravity="center"
                            android:text="@string/Saved_btn"
                            android:textSize="12dp"
                            android:visibility="gone" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="25dp"
                    android:orientation="vertical">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/shareButtonIdGenerateX"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:src="@drawable/share_icon"
                        app:civ_border_color="#878787"
                        app:civ_border_width="2dp" />

                    <TextView
                        style="@style/TextCardViewColor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:text="@string/Share_btn"
                        android:textSize="12dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="25dp"
                    android:orientation="vertical">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/downloadButtonIdGenerateX"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:layout_gravity="center"
                        android:src="@drawable/download_icon"
                        app:civ_border_color="#878787"
                        app:civ_border_width="2dp" />

                    <TextView
                        style="@style/TextCardViewColor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:text="@string/Download_btn"
                        android:textSize="12dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/customButtonIdGenerateX"
                        android:layout_width="55dp"
                        android:layout_height="55dp"
                        android:layout_gravity="center"
                        android:src="@drawable/custom_qrcode_icon"
                        app:civ_border_color="#878787"
                        app:civ_border_width="2dp" />

                    <TextView
                        style="@style/TextCardViewColor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:text="@string/Custom_btn"
                        android:textSize="12dp" />
                </LinearLayout>

            </LinearLayout>

        </FrameLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <FrameLayout
            android:id="@+id/bottomSheetIdFrameLayoutGenerateX_CustomQrcode"
            android:layout_width="match_parent"
            android:layout_height="480dp"
            android:background="@drawable/bottom_sheet_background"
            app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center">

                <ImageView
                    android:id="@+id/bottomsheetbariconId_CustomQrcode"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/bar_bottom_sheep_icon" />

                <TextView
                    android:id="@+id/generateX_CustomQrcode_TextViewId"
                    style="@style/TextCardViewColor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/bottomsheetbariconId_CustomQrcode"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="20dp"
                    android:gravity="center"
                    android:text="@string/CustomyourQrCode"
                    android:textSize="19dp" />
            </RelativeLayout>

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="110dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:gravity="center"
                        android:text="@string/Customcode"
                        android:textColor="#878787"
                        android:textSize="15dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:orientation="horizontal">


                        <RelativeLayout
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginRight="15dp">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/redColor_GenerateX_code"
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:src="@drawable/red_color_icon"
                                app:civ_border_color="#878787"
                                app:civ_border_width="2dp" />

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/redColor_GenerateX_code_selected"
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:src="@drawable/selected_color_icon"
                                android:visibility="gone" />
                            />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginRight="15dp">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/greenColor_GenerateX_code"
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:layout_gravity="center"
                                android:src="@drawable/green_color_icon"
                                app:civ_border_color="#878787"
                                app:civ_border_width="2dp" />

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/greenColor_GenerateX_code_selected"
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:src="@drawable/selected_color_icon"
                                android:visibility="gone" />
                            />
                        </RelativeLayout>


                        <RelativeLayout
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginRight="15dp">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/blueColor_GenerateX_code"
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:layout_gravity="center"
                                android:src="@drawable/blue_color_icon"
                                app:civ_border_color="#878787"
                                app:civ_border_width="2dp" />

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/blueColor_GenerateX_code_selected"
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:src="@drawable/selected_color_icon"
                                android:visibility="gone" />
                            />
                        </RelativeLayout>


                        <RelativeLayout
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginRight="15dp">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/brownColor_GenerateX_code"
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:layout_gravity="center"
                                android:src="@drawable/brown_color_icon"
                                app:civ_border_color="#878787"
                                app:civ_border_width="2dp" />

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/brownColor_GenerateX_code_selected"
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:src="@drawable/selected_color_icon"
                                android:visibility="gone" />
                            />
                        </RelativeLayout>


                        <RelativeLayout
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_centerHorizontal="true">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/pinkColor_GenerateX_code"
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:layout_gravity="center"
                                android:src="@drawable/pink_color_icon"
                                app:civ_border_color="#878787"
                                app:civ_border_width="2dp" />

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/pinkColor_GenerateX_code_selected"
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:src="@drawable/selected_color_icon"
                                android:visibility="gone" />
                            />
                        </RelativeLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="15dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginRight="15dp">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/purpleColor_GenerateX_code"
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:layout_centerHorizontal="true"
                                android:src="@drawable/purple_color_icon"
                                app:civ_border_color="#878787"
                                app:civ_border_width="2dp" />

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/purpleColor_GenerateX_code_selected"
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:src="@drawable/selected_color_icon"
                                android:visibility="gone" />
                            />
                        </RelativeLayout>


                        <RelativeLayout
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginRight="15dp">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/whiteColor_GenerateX_code"
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:layout_gravity="center"
                                android:src="@drawable/white_color_icon"
                                app:civ_border_color="#878787"
                                app:civ_border_width="2dp" />

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/whiteColor_GenerateX_code_selected"
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:src="@drawable/selected_color_icon"
                                android:visibility="gone" />
                            />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginRight="15dp">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/blackColor_GenerateX_code"
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:layout_gravity="center"
                                android:src="@drawable/black_color_icon"
                                app:civ_border_color="#878787"
                                app:civ_border_width="2dp" />

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/blackColor_GenerateX_code_selected"
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:src="@drawable/selected_color_icon"
                                android:visibility="gone" />
                            />
                        </RelativeLayout>


                        <RelativeLayout
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginRight="15dp">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/yellowColor_GenerateX_code"
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:layout_gravity="center"
                                android:src="@drawable/yellow_color_icon"
                                app:civ_border_color="#878787"
                                app:civ_border_width="2dp" />

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/yellowColor_GenerateX_code_selected"
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:src="@drawable/selected_color_icon"
                                android:visibility="gone" />
                            />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_centerHorizontal="true">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/orangeColor_GenerateX_code"
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:layout_gravity="center"
                                android:src="@drawable/orange_color_icon"
                                app:civ_border_color="#878787"
                                app:civ_border_width="2dp" />

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/orangeColor_GenerateX_code_selected"
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:src="@drawable/selected_color_icon"
                                android:visibility="gone" />
                            />
                        </RelativeLayout>

                    </LinearLayout>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="25dp"
                        android:layout_marginRight="20dp"
                        android:gravity="center"
                        android:text="@string/Custombackground"
                        android:textColor="#878787"
                        android:textSize="15dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginRight="15dp">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/redColor_GenerateX_background"
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:src="@drawable/red_color_icon"
                                app:civ_border_color="#878787"
                                app:civ_border_width="2dp" />

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/redColor_GenerateX_background_selected"
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:src="@drawable/selected_color_icon"
                                android:visibility="gone" />
                            />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginRight="15dp">

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/greenColor_GenerateX_background"
                                android:layout_width="45dp"
                                android:layout_height="45dp"
                                android:layout_gravity="center"
